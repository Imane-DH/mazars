<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= investment.title %>" />
</div>
<div>
  <label>Country</label>
  <select name="country">
    <% countries.forEach(country => { %> <% if (country.id ===
    investment.country) { %>
    <option selected label="<%= country.name %>" value="<%= country.id %>">
      <% } else { %>
    </option>

    <option label="<%= country.name %>" value="<%= country.id %>">
      <% } %> <% }) %>
    </option>
  </select>
</div>
<div>
  <label>Company</label>
  <input type="text" name="company" value="<%= investment.company %>" />
</div>
<div>
  <label>CreatedAt</label>
  <input
    type="date"
    name="CreatedAt"
    value="<%= investment.CreatedAt == null ? '' : investment.CreatedAt.toISOString().split('T')[0] %>"
  />
</div>
<div>
  <label>File</label>
  <input type="file" name="file" />
</div>
<div>
  <label>Description</label>
  <textarea name="description"><%= investment.description %></textarea>
</div>
